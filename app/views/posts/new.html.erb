<h2>Create a New Post</h2>

<%= form_with url: "/users/#{params[:user_id]}/posts", model: @post do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>
    <div>
        <%= form.label :text %>
        <%= form.text_field :text %>
    </div>
    <%= form.submit %>
<% end %>
